<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bandeau"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/rochester"
            android:text="Ma Collection  !"
            android:textColor="@color/colorText"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:paddingRight="210dp"
            android:text="" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/retour_accueil" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/collection_trace_facile" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/collection_trace_difficile" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/imageButton2"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/collection_dictee" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/collection_compte" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="48dp"
            android:layout_toStartOf="@+id/imageButton7"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/collection_addition" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="26dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/collection_addition_trou" />


    </RelativeLayout>
</LinearLayout>
